{% block listing_table_asset_group %}
{% set result = page.result %}
{% for row in result %}
{% set url = path('edit_asset_group', {'id': row.id}) %}
{% set hxUrl = url ~ '?hx=1' %}
<tr>
    <td>{{ row.name }}</td>
    <td>{% for serviceCheck in row.serviceChecks %}<span class="badge bg-info me-1">{{ serviceCheck.name }}</span>{% endfor %}</td>
    <td>{{ row.createdAt|date('d.m.Y H:i:s') }}</td>
    <td><a 
        class="btn btn-sm btn-primary"
        hx-get="{{ hxUrl }}"
        hx-target="#page-content"
        hx-push-url="{{ url }}"
        href="{{ url }}">{{ 'label.edit'|trans }}</a></td>
</tr>
{% endfor %}

<tr>
    <td colspan="4">
    <span class="dataTable-pagination">{% include 'listing/pagination.html.twig' with { 'pagination': page.pagination } %}</span> 
    </td>
</tr>

{% endblock %}
